<!DOCTYPE html>
<html>
    <head>
        <title>Blog App</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/styles/home.css">
    </head>
    <body>
        <header class="fixed-top">
            <h1 class="d-flex justify-content-between align-items-center my-3 mx-5">
                <a href="/" class="text-reset text-decoration-none"><span class="ml-5">Blog.site</span></a>
                <span>
                    <button id="new-blog-button" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">New Blog</button>
                    <a id="login-buttons">
                        <a href="/login"><button id="login-button" type="button" class="btn btn-primary">Login</button></a>
                        <a href="/signup"><button id="signup-button" type="button" class="btn btn-primary">Signup</button></a>
                    </span>
                </span>
            </h1>
        </header>

        <!-- Blogs Container -->
        <div id="blog-main-container" class="container">
            <% for (let blog of blogs) { %>
                <div class="blog-container row card mb-5">
                    <div class="blog-title card-header d-flex justify-content-between">
						<span><span class="rounded-pill bg-primary px-2 py-1"><%= blog.category %></span> <%= blog.title %></span>
						<span class="blog-author">Posted By: <%= blog.username %></span>
					</div>
                    <div class="card-body my-3">
                        <div class="blog-content card-text"><%= blog.body %></div>
                    </div>
                    <div class="blog-footer card-footer d-flex justify-content-between">
                        <span class="blog-time-container">Posted at: <span class=blog-time><%= blog.date_created %></span></span>
                        <span class="blog-controls" data-blogAuthorId=<%=blog.creator_user_id%>>
                            <button class="blog-delete btn-danger btn-sm" data-blogId=<%=blog.blog_id%>>Delete</button>
                            <button class="blog-edit btn-secondary btn-sm" data-bs-toggle="modal" data-blogId=<%=blog.blog_id%> data-bs-target="#staticEdit">Edit</button>
                        </span>
                    </div>
                </div>

            <% } %>
        </div>

        <!-- TODO: get rid of author field in new blog -->
        <!-- New Post Modal -->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel"></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <form id="new-blog-container">

                            <div class="form-group">
                                <label for="new-author-name">Author Name:</label>
                                <input class="form-control" type="text" id="new-author-name" name="author">
                            </div>

                            <div class="form-group">
                                <label for="new-title">Blog Title:</label>
                                <input class="form-control" type="text" id="new-title" name="title">
                            </div>

                            <div class="form-group">
                                <label for="new-content">Blog Content:</label>
                                <input class="form-control" type="text" id="new-content" name="content">
                            </div>

							<div class="form-group">
								<label for="new-category">Blog Category:</label>
								<select class="form-control" id="new-category" name="category">
									<option>Tech</option>
									<option>Lifestyle</option>
									<option>Education</option>
									<option>Food</option>
								</select>
							</div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit Modal -->
        <div class="modal fade" id="staticEdit" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticEditLabel"></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <form id="edit-blog-container">

                            <div class="form-group">
                                <label for="new-content">Blog Content:</label>
                                <input class="form-control" type="text" id="edit-content" name="content">
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <script src="/scripts/home.js"></script>
    </body>
</html>

